<Application x:Class="LSS_prototype.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:LSS_prototype"
             xmlns:view="clr-namespace:LSS_prototype.Views"
             StartupUri="Patient_Page/Patient.xaml">
    <Application.Resources>
        <ResourceDictionary>

            <DataTemplate DataType="{x:Type vm:PatientAddViewModel}">
                <view:PatientAddDialog />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:PatientEditViewModel}">
                <view:PatientEditDialog />
            </DataTemplate>

            <Style x:Key="DefaultRoundedButtonStyle" TargetType="Button">
                <Setter Property="FontSize" Value="25"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="Foreground" Value="Black"/>
                <Setter Property="Height" Value="83"/>
                <Setter Property="Width" Value="219"/>
                <Setter Property="Margin" Value="0,0,0,15"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="BorderBrush" Value="Transparent"/>
                <Style.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Style.Resources>
            </Style>

            <Style x:Key="PatientCardStyle" TargetType="Border">
                <Setter Property="Background" Value="#FFF3ECEC"/>
                <Setter Property="CornerRadius" Value="15.54"/>
                <Setter Property="Margin" Value="10"/>
                <Setter Property="Height" Value="200"/>
            </Style>

            <Style x:Key="TabCustomStyle" TargetType="TabControl">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="TabControl">
                            <Grid x:Name="TabControlRoot">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <UniformGrid x:Name="HeaderPanel" 
                                             Grid.Row="0" 
                                             Rows="1" 
                                             Columns="2" 
                                             IsItemsHost="True"/>

                                <ContentPresenter x:Name="PART_SelectedContentHost" 
                                                  Grid.Row="1" 
                                                  ContentSource="SelectedContent"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="TabItemCustomStyle" TargetType="TabItem">
                <Setter Property="FontSize" Value="36"/>
                <Setter Property="Height" Value="80"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="TabItem">
                            <Border x:Name="TabBorder" 
                                    Background="#FFD2C5C5" 
                                    BorderBrush="Black" 
                                    BorderThickness="0,0,0,1">
                                <ContentPresenter x:Name="ContentSite" 
                                                  ContentSource="Header" 
                                                  Margin="10,2,10,2" 
                                                  HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter TargetName="TabBorder" Property="Background" Value="#FFE5E5E5"/>
                                    <Setter TargetName="TabBorder" Property="BorderThickness" Value="0"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

        </ResourceDictionary>
    </Application.Resources>
</Application>
<Application x:Class="LSS_prototype.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"

             xmlns:vmPatient="clr-namespace:LSS_prototype.Patient_Page"
             xmlns:vmUser="clr-namespace:LSS_prototype.User_Page"

             xmlns:viewPatient="clr-namespace:LSS_prototype.Patient_Page"
             xmlns:viewUser="clr-namespace:LSS_prototype.User_Page"
            
             StartupUri="Login_Page/Login.xaml">
    <Application.Resources>
        <ResourceDictionary>

            
            <DataTemplate DataType="{x:Type vmPatient:PatientAddViewModel}">
                <viewPatient:PatientAddDialog />
            </DataTemplate>

            <DataTemplate DataType="{x:Type vmPatient:PatientEditViewModel}">
                <viewPatient:PatientEditDialog />
            </DataTemplate>

            <DataTemplate DataType="{x:Type vmUser:User_AddViewModel}">
                <viewUser:User_Add />
            </DataTemplate>

            <DataTemplate DataType="{x:Type vmUser:User_EditViewModel}">
                <viewUser:User_Edit />
            </DataTemplate>

            <Style x:Key="DefaultRoundedButtonStyle" TargetType="Button">
                <Setter Property="FontSize" Value="25"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="Foreground" Value="Black"/>
                <Setter Property="Height" Value="83"/>
                <Setter Property="Width" Value="219"/>
                <Setter Property="Margin" Value="0,0,0,15"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="BorderBrush" Value="Transparent"/>
                <Style.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Style.Resources>
            </Style>

            <Style x:Key="PatientCardStyle" TargetType="Border">
                <Setter Property="Background" Value="#FFF3ECEC"/>
                <Setter Property="CornerRadius" Value="15.54"/>
                <Setter Property="Margin" Value="10"/>
                <Setter Property="Height" Value="200"/>
            </Style>

            <Style x:Key="TabCustomStyle" TargetType="TabControl">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="TabControl">
                            <Grid x:Name="TabControlRoot">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <UniformGrid x:Name="HeaderPanel" 
                                             Grid.Row="0" 
                                             Rows="1" 
                                             Columns="2" 
                                             IsItemsHost="True"/>

                                <ContentPresenter x:Name="PART_SelectedContentHost" 
                                                  Grid.Row="1" 
                                                  ContentSource="SelectedContent"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="TabItemCustomStyle" TargetType="TabItem">
                <Setter Property="FontSize" Value="36"/>
                <Setter Property="Height" Value="80"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="TabItem">
                            <Border x:Name="TabBorder" 
                                    Background="#FFD2C5C5" 
                                    BorderBrush="Black" 
                                    BorderThickness="0,0,0,1">
                                <ContentPresenter x:Name="ContentSite" 
                                                  ContentSource="Header" 
                                                  Margin="10,2,10,2" 
                                                  HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter TargetName="TabBorder" Property="Background" Value="#FFE5E5E5"/>
                                    <Setter TargetName="TabBorder" Property="BorderThickness" Value="0"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="DefaultDIALOGTEXTStyle" TargetType="TextBox">
                <Setter Property="FontSize" Value="22"/>
                <Setter Property="Padding" Value="15,10"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="Height" Value="55"/>
                <Setter Property="Margin" Value="0,0,0,30"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="Background" Value="#F9F9F9"/>
                <Setter Property="BorderThickness" Value="0,0,0,2"/>
                <Setter Property="BorderBrush" Value="#CCCCCC"/>
                <Style.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Style.Resources>
            </Style>

            <Style x:Key="DefaultPasswordBoxStyle" TargetType="PasswordBox">

                <Setter Property="FontSize" Value="22"/>
                <Setter Property="Padding" Value="15,10"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="Height" Value="55"/>
                <Setter Property="Margin" Value="0,0,0,30"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="Background" Value="#F9F9F9"/>
                <Setter Property="BorderThickness" Value="0,0,0,2"/>
                <Setter Property="BorderBrush" Value="#CCCCCC"/>

                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="PasswordBox">
                            <Border
                    CornerRadius="10"
                    Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}">

                                <ScrollViewer x:Name="PART_ContentHost"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>

            </Style>



            <Style x:Key="DefaultDIALOGDateStyle" TargetType="DatePicker">
                <Setter Property="FontSize" Value="22"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="Height" Value="55"/>
                <Setter Property="Margin" Value="0,0,0,40"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="Background" Value="#F9F9F9"/>
                <Setter Property="BorderThickness" Value="0,0,0,2"/>
                <Setter Property="BorderBrush" Value="#CCCCCC"/>
                <Setter Property="Focusable" Value="False"/>
                <Setter Property="IsHitTestVisible" Value="True"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Style.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Style.Resources>
            </Style>

            <Style x:Key="DefaultDIALOGSexStyle" TargetType="ComboBox">
                <Setter Property="FontSize" Value="22"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="Padding" Value="15,10"/>
                <Setter Property="Height" Value="55"/>
                <Setter Property="Margin" Value="0,0,0,40"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="Background" Value="#F9F9F9"/>
                <Setter Property="BorderThickness" Value="0,0,0,2"/>
                <Setter Property="BorderBrush" Value="#CCCCCC"/>
                <Style.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Style.Resources>
            </Style>

            <Style x:Key="DefaultDIALOGbuttonblueStyle" TargetType="Button">
                <Setter Property="FontSize" Value="22"/>
                <Setter Property="FontWeight" Value="Black"/>
                <Setter Property="Height" Value="65"/>
                <Setter Property="Margin" Value="0,0,10,0"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="Background" Value="#4A90E2"/>
                <Style.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="12"/>
                    </Style>
                </Style.Resources>
            </Style>

            <Style x:Key="DefaultDIALOGbuttonwhiteStyle" TargetType="Button">
                <Setter Property="FontSize" Value="22"/>
                <Setter Property="FontWeight" Value="Black"/>
                <Setter Property="Height" Value="65"/>
                <Setter Property="Margin" Value="10,0,0,0"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="Background" Value="#E0E0E0"/>
                <Style.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="12"/>
                    </Style>
                </Style.Resources>
            </Style>

            <Style x:Key="SelectablePatientCardStyle" TargetType="Border" BasedOn="{StaticResource PatientCardStyle}">
                <Setter Property="BorderBrush" Value="Transparent"/>
                <Setter Property="BorderThickness" Value="4"/>
                <Style.Triggers>
                    <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}}" Value="True">
                        <Setter Property="BorderBrush" Value="#FF0078D7"/>
                        <Setter Property="Background" Value="#FFF0F8FF"/>
                    </DataTrigger>
                </Style.Triggers>
            </Style>

        </ResourceDictionary>
    </Application.Resources>
</Application>
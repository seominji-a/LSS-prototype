<Window x:Class="LSS_prototype.CustomMessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="알림" 
        WindowState="Maximized"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        Topmost="True">

    <Grid>
        <Grid Background="#7F000000"
              MouseDown="Overlay_MouseDown"
              x:Name="OverlayGrid">

            <Border Background="#F3F5F7"
                    BorderBrush="#D6DEE8"
                    BorderThickness="2"
                    CornerRadius="20"
                    Width="560"
                    Height="290"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">

                <Border.Effect>
                    <DropShadowEffect Color="#173753"
                                      Direction="270"
                                      ShadowDepth="0"
                                      BlurRadius="30"
                                      Opacity="0.25"/>
                </Border.Effect>

                <Grid Margin="20,20,20,20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- 상단: 카운트다운 -->
                    <Grid Grid.Row="0" Margin="0,0,0,6">
                        <TextBlock x:Name="CountdownText"
                                   Text=""
                                   FontSize="13"
                                   FontFamily="Arial"
                                   Foreground="#64748B"
                                   FontWeight="SemiBold"
                                   HorizontalAlignment="Right"
                                   VerticalAlignment="Top"/>
                    </Grid>

                    <!-- 중앙: 아이콘(왼쪽 고정) + 메시지(우측 넓게) -->
                    <Grid Grid.Row="1" VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="140"/>
                            <!-- 아이콘 고정 -->
                            <ColumnDefinition Width="*"/>
                            <!-- 메시지 최대 활용 -->
                            <ColumnDefinition Width="10"/>
                            <!-- 우측 최소 여백 -->
                        </Grid.ColumnDefinitions>

                        <!-- 아이콘 - 맨 왼쪽 고정 -->
                        <Border x:Name="IconBorder"
                                Grid.Column="0"
                                Width="110"
                                Height="110"
                                CornerRadius="55"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                Visibility="Collapsed">
                            <TextBlock x:Name="IconText"
                                       FontSize="64"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       FontFamily="Segoe UI Symbol"/>
                        </Border>

                        <!-- 메시지 - 우측 넓게 -->
                        <TextBlock x:Name="MessageText"
                                   Grid.Column="1"
                                   Text="메시지 내용"
                                   FontSize="20"
                                   FontFamily="Arial"
                                   TextWrapping="Wrap"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   TextAlignment="Center"
                                   Foreground="#1E293B"
                                   FontWeight="Normal"
                                   LineHeight="28"/>
                    </Grid>

                    <!-- 하단: 버튼 -->
                    <StackPanel Grid.Row="2"
                                Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="0,14,0,4">

                        <!-- 확인 버튼 -->
                        <Button x:Name="OkButton"
                                Content="YES"
                                Width="130"
                                Height="48"
                                Click="OkButton_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#173753"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="FontSize" Value="16"/>
                                    <Setter Property="FontFamily" Value="Arial"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="Cursor" Value="Hand"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="12">
                                                    <Border.Effect>
                                                        <DropShadowEffect Color="#173753" Direction="270" ShadowDepth="0" BlurRadius="8" Opacity="0.3"/>
                                                    </Border.Effect>
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#1F4767"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background" Value="#102A3F"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <!-- 예 버튼 -->
                        <Button x:Name="YesButton"
                                Content="YES"
                                Width="130"
                                Height="48"
                                Margin="0,0,12,0"
                                Visibility="Collapsed"
                                Click="YesButton_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#173753"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="FontSize" Value="16"/>
                                    <Setter Property="FontFamily" Value="Arial"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="Cursor" Value="Hand"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="12">
                                                    <Border.Effect>
                                                        <DropShadowEffect Color="#173753" Direction="270" ShadowDepth="0" BlurRadius="8" Opacity="0.3"/>
                                                    </Border.Effect>
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#1F4767"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background" Value="#102A3F"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <!-- 아니오 버튼 -->
                        <Button x:Name="NoButton"
                                Content="NO"
                                Width="130"
                                Height="48"
                                Visibility="Collapsed"
                                Click="NoButton_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#D6DEE8"/>
                                    <Setter Property="Foreground" Value="#5F6E82"/>
                                    <Setter Property="FontSize" Value="16"/>
                                    <Setter Property="FontFamily" Value="Arial"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="Cursor" Value="Hand"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="12">
                                                    <Border.Effect>
                                                        <DropShadowEffect Color="#94A3B8" Direction="270" ShadowDepth="0" BlurRadius="8" Opacity="0.25"/>
                                                    </Border.Effect>
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#C8D4E0"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background" Value="#B8C8D8"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
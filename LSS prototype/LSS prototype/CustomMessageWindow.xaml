<Window x:Class="LSS_prototype.CustomMessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="알림" 
        WindowState="Maximized"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        Topmost="True">

    <Grid>
        <Grid Background="#7F000000"
              MouseDown="Overlay_MouseDown"
              x:Name="OverlayGrid">

            <Border Background="White"
                    BorderBrush="#C8DCE8"
                    BorderThickness="2"
                    CornerRadius="20"
                    Width="450"
                    Height="240"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">

                <Border.Effect>
                    <DropShadowEffect Color="#7BA8C7"
                                      Direction="270"
                                      ShadowDepth="0"
                                      BlurRadius="20"
                                      Opacity="0.4"/>
                </Border.Effect>

                <Grid Margin="30,20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Margin="0,0,0,10">
                        <TextBlock x:Name="CountdownText"
                                   Text=""
                                   FontSize="14"
                                   FontFamily="Arial"
                                   Foreground="#7BA8C7" 
                                   FontWeight="SemiBold"
                                   HorizontalAlignment="Right"
                                   VerticalAlignment="Top"/>
                    </Grid>

                    <TextBlock x:Name="MessageText"
                               Grid.Row="1"
                               Text="메시지 내용"
                               FontSize="20"
                               FontFamily="Arial"
                               TextWrapping="Wrap"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"
                               Foreground="Black"
                               FontWeight="Normal"
                               LineHeight="24"/>

                    <StackPanel Grid.Row="2"
                                Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="0,20,0,10">

                        <Button x:Name="OkButton"
                                Content="확인"
                                Width="120"
                                Height="45"
                                Click="OkButton_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#9BC4DD"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="FontSize" Value="16"/>
                                    <Setter Property="FontFamily" Value="Arial"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="Cursor" Value="Hand"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="12">
                                                    <Border.Effect>
                                                        <DropShadowEffect Color="#7BA8C7" Direction="270" ShadowDepth="0" BlurRadius="8" Opacity="0.4"/>
                                                    </Border.Effect>
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#88B5D1"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background" Value="#7BA8C7"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <Button x:Name="YesButton"
                                Content="예"
                                Width="120"
                                Height="45"
                                Margin="0,0,10,0"
                                Visibility="Collapsed"
                                Click="YesButton_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#9BC4DD"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="FontSize" Value="16"/>
                                    <Setter Property="FontFamily" Value="Arial"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="Cursor" Value="Hand"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="12">
                                                    <Border.Effect>
                                                        <DropShadowEffect Color="#7BA8C7" Direction="270" ShadowDepth="0" BlurRadius="8" Opacity="0.4"/>
                                                    </Border.Effect>
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#88B5D1"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background" Value="#7BA8C7"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <Button x:Name="NoButton"
                                Content="아니오"
                                Width="120"
                                Height="45"
                                Visibility="Collapsed"
                                Click="NoButton_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#C8DCE8"/>
                                    <Setter Property="Foreground" Value="#6B8CAE"/>
                                    <Setter Property="FontSize" Value="16"/>
                                    <Setter Property="FontFamily" Value="Arial"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="Cursor" Value="Hand"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="12">
                                                    <Border.Effect>
                                                        <DropShadowEffect Color="#B8D4E8" Direction="270" ShadowDepth="0" BlurRadius="8" Opacity="0.3"/>
                                                    </Border.Effect>
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#B8D4E8"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background" Value="#A8C8DC"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
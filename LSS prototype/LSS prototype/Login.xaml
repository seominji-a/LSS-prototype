<Window x:Class="LSS_prototype.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LSS_prototype"
        mc:Ignorable="d"
        Title="Login" Height="900" Width="1200" Background="#FFF1EBEB" ResizeMode="NoResize" Topmost="True">
    <Grid Background="#FFDCD6D6">
        <TextBlock HorizontalAlignment="Left" Margin="509,216,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="60" FontWeight="Bold" FontFamily="Batang"><Run Text="L"/><Run Language="ko-kr" Text="ogin"/></TextBlock>
        <Rectangle HorizontalAlignment="Left" Height="48" Stroke="#FFF9F0F0" VerticalAlignment="Top" Width="584" RadiusX="10.5" RadiusY="10.5" Fill="#FFFBF8F8" Margin="302,368,0,0"/>
        <Rectangle HorizontalAlignment="Left" Height="48" Margin="302,499,0,0" Stroke="#FFF7F2F2" VerticalAlignment="Top" Width="584" RadiusX="10.5" RadiusY="10.5" Fill="#FFFBF8F8"/>
        <TextBlock HorizontalAlignment="Left" Margin="307,317,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="30" FontWeight="Bold" FontFamily="Batang"><Run Language="ko-kr" Text="ID"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="307,459,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="30" FontWeight="Bold" FontFamily="Batang"><Run Text="P"/><Run Language="ko-kr" Text="assword"/></TextBlock>
        <Border CornerRadius="10"
        Background="Transparent"
        BorderBrush="Transparent"
        BorderThickness="1"
        HorizontalAlignment="Left"
        Margin="312,499,0,0"
        VerticalAlignment="Top"
        Width="567"
        Height="48">

            <TextBox Text=""
             FontSize="36"
             Background="Transparent"
             BorderThickness="0"
             TextWrapping="Wrap"
             VerticalContentAlignment="Center" SelectionBrush="{x:Null}" TextAlignment="Center"/>
        </Border>
        <Border CornerRadius="10"
        Background="Transparent"
        BorderBrush="Transparent"
        BorderThickness="1"
        HorizontalAlignment="Left"
        Margin="312,368,0,0"
        VerticalAlignment="Top"
        Width="567"
        Height="48">

            <TextBox Text=""
             FontSize="36"
             Background="Transparent"
             BorderThickness="0"
             TextWrapping="Wrap"
             VerticalContentAlignment="Center" SelectionBrush="{x:Null}" TextAlignment="Center"/>
        </Border>
        <Button HorizontalAlignment="Left" Margin="303,613,0,0" VerticalAlignment="Top" Height="70" Width="584" BorderBrush="{x:Null}" FontSize="25" Background="#FF4E4747" Foreground="#FFECE5E5">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="10                             "/>
                </Style>
            </Button.Resources>
            <TextBlock
                Text="SIGN IN"
                TextAlignment="Center" FontFamily="Batang"/>
        </Button>
    </Grid>
</Window>

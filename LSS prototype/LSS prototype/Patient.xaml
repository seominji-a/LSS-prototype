<Window x:Class="LSS_prototype.Patient"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LSS_prototype"
        mc:Ignorable="d"
        Title="PATIENT" Height="1080" Width="1920" WindowState="Maximized" ResizeMode="NoResize" >

    <Grid>
        <TabControl>
            <TabItem Header="Scaduled Patient" Margin="0,-1,-475,-33" FontSize="36">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1183*"/>
                        <ColumnDefinition Width="154*"/>
                        <ColumnDefinition Width="577*"/>
                    </Grid.ColumnDefinitions>
                    <Rectangle HorizontalAlignment="Left" Height="181" Margin="6,345,0,0" VerticalAlignment="Top" Width="530" RadiusX="15.54" RadiusY="15.54" Fill="#FFF3ECEC"/>
                    <Rectangle HorizontalAlignment="Left" Height="181" Margin="565,345,0,0" VerticalAlignment="Top" Width="529" RadiusX="15.54" RadiusY="15.54" Fill="#FFF3ECEC"/>
                    <Rectangle HorizontalAlignment="Left" Height="181" Margin="1128,345,0,0" VerticalAlignment="Top" Width="530" RadiusX="15.54" RadiusY="15.54" Fill="#FFF3ECEC" Grid.ColumnSpan="3"/>
                    <Rectangle HorizontalAlignment="Left" Height="181" Margin="6,553,0,0" VerticalAlignment="Top" Width="530" RadiusX="15.54" RadiusY="15.54" Fill="#FFF3ECEC"/>
                    <Rectangle HorizontalAlignment="Left" Height="181" Margin="565,553,0,0" VerticalAlignment="Top" Width="529" RadiusX="15.54" RadiusY="15.54" Fill="#FFF3ECEC"/>
                    <Rectangle HorizontalAlignment="Left" Height="181" Margin="1128,553,0,0" VerticalAlignment="Top" Width="530" RadiusX="15.54" RadiusY="15.54" Fill="#FFF3ECEC" Grid.ColumnSpan="3"/>
                    <Rectangle HorizontalAlignment="Left" Height="181" Margin="6,759,0,0" VerticalAlignment="Top" Width="530" RadiusX="15.54" RadiusY="15.54" Fill="#FFF3ECEC"/>
                    <Rectangle HorizontalAlignment="Left" Height="181" Margin="565,759,0,0" VerticalAlignment="Top" Width="529" RadiusX="15.54" RadiusY="15.54" Fill="#FFF3ECEC"/>
                    <Rectangle HorizontalAlignment="Left" Height="181" Margin="1128,759,0,0" VerticalAlignment="Top" Width="530" RadiusX="15.54" RadiusY="15.54" Fill="#FFF3ECEC" Grid.ColumnSpan="3"/>
                    <TextBlock HorizontalAlignment="Left" Margin="30,57,0,0" TextWrapping="Wrap" Text="PATIENT LIST" VerticalAlignment="Top" FontSize="60"/>
                    <TextBlock HorizontalAlignment="Left" Margin="36,137,0,0" TextWrapping="Wrap" Text="Scheduled Patient" VerticalAlignment="Top" FontSize="40" Foreground="#FF483E3E"/>
                    <Button Content="Sync" HorizontalAlignment="Left" Margin="354,296,0,0" VerticalAlignment="Top" Height="83" Width="219" BorderBrush="#FFDDDDDD" FontSize="25" FontWeight="Bold" Grid.Column="2"  Command="{Binding SyncClickCommand}">
                        <Button.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="10                             "/>
                            </Style>
                        </Button.Resources>
                    </Button>
                    <Button Content="Home" HorizontalAlignment="Left" Margin="354,394,0,0" VerticalAlignment="Top" Height="83" Width="219" BorderBrush="#FFDDDDDD" FontSize="25" FontWeight="Bold" Grid.Column="2" Click="HomeButton_Click">
                        <Button.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="10                             "/>
                            </Style>
                        </Button.Resources>
                    </Button>
                    <Rectangle HorizontalAlignment="Left" Height="14" Margin="20,256,0,0" Stroke="Black" VerticalAlignment="Top" Width="1652" RadiusX="15.54" RadiusY="15.54" Fill="#FF483E3E" Grid.ColumnSpan="3"/>
                    <ScrollBar HorizontalAlignment="Left" Margin="332,294,0,0" VerticalAlignment="Top" Height="750" Width="15" Grid.Column="2"/>
                </Grid>
            </TabItem>
            <TabItem Header="Registered Patient" Margin="469,-2,-958,-31" FontSize="36">
                <Grid Background="#FFE5E5E5">
                    <TextBlock HorizontalAlignment="Left" Margin="30,57,0,0" TextWrapping="Wrap" Text="PATIENT LIST" VerticalAlignment="Top" FontSize="60"/>
                    <TextBlock HorizontalAlignment="Left" Margin="36,137,0,0" TextWrapping="Wrap" Text="Registered Patient" VerticalAlignment="Top" FontSize="40" Foreground="#FF483E3E"/>
                    <Rectangle HorizontalAlignment="Left" Height="14" Margin="20,256,0,0" Stroke="Black" VerticalAlignment="Top" Width="1652" RadiusX="15.54" RadiusY="15.54" Fill="#FF483E3E"/>
                    <Rectangle HorizontalAlignment="Left" Height="181" Margin="6,345,0,0" VerticalAlignment="Top" Width="530" RadiusX="15.54" RadiusY="15.54" Fill="#FFF3ECEC"/>
                    <Rectangle HorizontalAlignment="Left" Height="181" Margin="565,345,0,0" VerticalAlignment="Top" Width="529" RadiusX="15.54" RadiusY="15.54" Fill="#FFF3ECEC"/>
                    <Rectangle HorizontalAlignment="Left" Height="181" Margin="1128,345,0,0" VerticalAlignment="Top" Width="530" RadiusX="15.54" RadiusY="15.54" Fill="#FFF3ECEC"/>
                    <Rectangle HorizontalAlignment="Left" Height="181" Margin="6,553,0,0" VerticalAlignment="Top" Width="530" RadiusX="15.54" RadiusY="15.54" Fill="#FFF3ECEC"/>
                    <Rectangle HorizontalAlignment="Left" Height="181" Margin="565,553,0,0" VerticalAlignment="Top" Width="529" RadiusX="15.54" RadiusY="15.54" Fill="#FFF3ECEC"/>
                    <Rectangle HorizontalAlignment="Left" Height="181" Margin="1128,553,0,0" VerticalAlignment="Top" Width="530" RadiusX="15.54" RadiusY="15.54" Fill="#FFF3ECEC"/>
                    <Rectangle HorizontalAlignment="Left" Height="181" Margin="6,759,0,0" VerticalAlignment="Top" Width="530" RadiusX="15.54" RadiusY="15.54" Fill="#FFF3ECEC"/>
                    <Rectangle HorizontalAlignment="Left" Height="181" Margin="565,759,0,0" VerticalAlignment="Top" Width="529" RadiusX="15.54" RadiusY="15.54" Fill="#FFF3ECEC"/>
                    <Rectangle HorizontalAlignment="Left" Height="181" Margin="1128,759,0,0" VerticalAlignment="Top" Width="530" RadiusX="15.54" RadiusY="15.54" Fill="#FFF3ECEC"/>
                    <ScrollBar HorizontalAlignment="Left" Margin="1669,294,0,0" VerticalAlignment="Top" Height="750" Width="15"/>
                    <Button Content="Add Patient" HorizontalAlignment="Left" Margin="1691,296,0,0" VerticalAlignment="Top" Height="83" Width="219" BorderBrush="#FFDDDDDD" FontSize="25" FontWeight="Bold"  Command="{Binding PatientAddCommand}">
                        <Button.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="10                             "/>
                            </Style>
                        </Button.Resources>
                    </Button>
                    <Button Content="Edit Patient" HorizontalAlignment="Left" Margin="1691,393,0,0" VerticalAlignment="Top" Height="83" Width="219" BorderBrush="#FFDDDDDD" FontSize="25" FontWeight="Bold">
                        <Button.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="10                             "/>
                            </Style>
                        </Button.Resources>
                    </Button>
                    <Button Content="Delete Patient" HorizontalAlignment="Left" Margin="1691,489,0,0" VerticalAlignment="Top" Height="83" Width="219" BorderBrush="#FFDDDDDD" FontSize="25" FontWeight="Bold">
                        <Button.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="10                             "/>
                            </Style>
                        </Button.Resources>
                    </Button>
                    <Button Content="Home" HorizontalAlignment="Left" Margin="1691,585,0,0" VerticalAlignment="Top" Height="83" Width="219" BorderBrush="#FFDDDDDD" FontSize="25" FontWeight="Bold"  Click="HomeButton_Click">
                        <Button.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="10                             "/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>


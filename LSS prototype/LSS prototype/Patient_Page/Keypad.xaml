<UserControl x:Class="LSS_prototype.Patient_Page.Keypad"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LSS_prototype.Patient_Page"
        mc:Ignorable="d"
        d:DesignHeight="500" d:DesignWidth="550" Background="#FFBBB3B3">

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBox Text="{Binding InputText}" 
                 FontSize="28"
                 IsReadOnly="True"
                 HorizontalContentAlignment="Center"/>

            <UniformGrid Grid.Row="1" Rows="4" Columns="3" Margin="0,20,0,0">

            <Button Content="7" 
        Command="{Binding DataContext.NumberCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
        CommandParameter="7" 
        FontSize="22"/>
            <Button Content="8" 
        Command="{Binding DataContext.NumberCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
        CommandParameter="8" 
        FontSize="22"/>
            <Button Content="9" 
        Command="{Binding DataContext.NumberCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
        CommandParameter="9" 
        FontSize="22"/>

            <Button Content="4" 
        Command="{Binding DataContext.NumberCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
        CommandParameter="4" 
        FontSize="22"/>
            <Button Content="5" 
        Command="{Binding DataContext.NumberCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
        CommandParameter="5" 
        FontSize="22"/>
            <Button Content="6" 
        Command="{Binding DataContext.NumberCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
        CommandParameter="6" 
        FontSize="22"/>

            <Button Content="1" 
        Command="{Binding DataContext.NumberCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
        CommandParameter="1" 
        FontSize="22"/>
            <Button Content="2" 
        Command="{Binding DataContext.NumberCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
        CommandParameter="2" 
        FontSize="22"/>
            <Button Content="3" 
        Command="{Binding DataContext.NumberCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
        CommandParameter="3" 
        FontSize="22"/>

            <Button Content="←" 
        Command="{Binding DataContext.BackspaceCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
        FontSize="22"/>
            <Button Content="0" 
        Command="{Binding DataContext.NumberCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
        CommandParameter="0" 
        FontSize="22"/>
            <Button Content="ENTER" 
        Command="{Binding DataContext.ConfirmCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
        FontSize="22"/>
        </UniformGrid>
        </Grid>
</UserControl>

<UserControl x:Class="LSS_prototype.Views.PatientAddDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="550">

    <Border Background="White" CornerRadius="20" BorderBrush="#EEEEEE" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="25" Direction="-90" RenderingBias="Quality" ShadowDepth="5" Opacity="0.15"/>
        </Border.Effect>

        <Grid Margin="40">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="Register New Patient" FontSize="32" FontWeight="ExtraBold" 
                       Margin="0,0,0,40" HorizontalAlignment="Left" Foreground="#222222"/>

            <StackPanel Grid.Row="1">
                <TextBlock Text="Patient Name" FontSize="20" FontWeight="Bold" Margin="0,0,0,10" Foreground="#666666"/>
                <TextBox Text="{Binding PatientName, UpdateSourceTrigger=PropertyChanged}" 
                        Style="{StaticResource DefaultDIALOGTEXTStyle}"/>

                <TextBlock Text="Patient Code" FontSize="20" FontWeight="Bold" Margin="0,0,0,10" Foreground="#666666"/>
                <TextBox Text="{Binding PatientCode, UpdateSourceTrigger=PropertyChanged}" 
                         Style="{StaticResource DefaultDIALOGTEXTStyle}"/>

                <TextBlock Text="Date of Birth" FontSize="20" FontWeight="Bold" Margin="0,0,0,10" Foreground="#666666"/>
                <DatePicker x:Name="DpBirthDate" SelectedDate="{Binding BirthDate, UpdateSourceTrigger=PropertyChanged}"  Style="{StaticResource DefaultDIALOGDateStyle}" Focusable="False" IsHitTestVisible="True" Cursor="Hand" PreviewMouseUp="DpBirthDate_PreviewMouseUp" >
                    <DatePicker.Resources>
                        <Style TargetType="{x:Type DatePickerTextBox}">
                            <Setter Property="Control.Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type DatePickerTextBox}">
                                        <TextBox x:Name="PART_TextBox"
                                 Text="{Binding Path=Text, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                                 FontSize="{TemplateBinding FontSize}"
                                 VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                                 BorderThickness="0"
                                 Background="Transparent" BorderBrush="#FFF9F9F9" Focusable="False" Cursor="Hand" IsReadOnly="True"/>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </DatePicker.Resources>
                </DatePicker>

                <TextBlock Text="Sex" FontSize="20" FontWeight="Bold" Margin="0,0,0,10" Foreground="#666666"/>
                <ComboBox SelectedValue="{Binding Sex, UpdateSourceTrigger=PropertyChanged}" SelectedValuePath="Content" Style="{StaticResource DefaultDIALOGSexStyle}">
                    <ComboBoxItem Content="M"/>
                    <ComboBoxItem Content="F"/>
                </ComboBox>
            </StackPanel>

            <UniformGrid Grid.Row="2" Columns="2" Margin="0,10,0,0">
                <Button Content="SAVE" Command="{Binding SaveCommand}" 
                      Style="{StaticResource DefaultDIALOGbuttonblueStyle}" >
                </Button>

                <Button Content="CANCEL" Command="{Binding CancelCommand}" 
                       Style="{StaticResource DefaultDIALOGbuttonwhiteStyle}" >
                </Button>
            </UniformGrid>
        </Grid>
    </Border>
</UserControl>
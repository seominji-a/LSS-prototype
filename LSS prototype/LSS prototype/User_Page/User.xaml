<UserControl x:Class="LSS_prototype.User_Page.User"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LSS_prototype.User_Page"
        mc:Ignorable="d"
        d:DesignWidth="1920" d:DesignHeight="1080"
        FontFamily="Arial" Background="#F3F5F7">

    <UserControl.DataContext>
        <local:UserViewModel/>
    </UserControl.DataContext>

    <UserControl.Resources>
        <SolidColorBrush x:Key="Primary"     Color="#173753"/>
        <SolidColorBrush x:Key="PrimaryFade" Color="#3B82F6"/>
        <SolidColorBrush x:Key="Surface"     Color="#FFFFFF"/>
        <SolidColorBrush x:Key="CardOuter"   Color="#E9ECF0"/>
        <SolidColorBrush x:Key="Border"      Color="#D6DEE8"/>
        <SolidColorBrush x:Key="TextDark"    Color="#1E293B"/>
        <SolidColorBrush x:Key="TextMid"     Color="#475569"/>
        <SolidColorBrush x:Key="TextMuted"   Color="#94A3B8"/>
        <SolidColorBrush x:Key="Panel"       Color="#0F2637"/>

        <Style x:Key="NavBtn" TargetType="Button">
            <Setter Property="Background"      Value="{StaticResource Surface}"/>
            <Setter Property="Foreground"      Value="{StaticResource Primary}"/>
            <Setter Property="FontSize"        Value="18"/>
            <Setter Property="FontWeight"      Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height"          Value="62"/>
            <Setter Property="Width"           Value="228"/>
            <Setter Property="Cursor"          Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="12">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="HalfBtn" TargetType="Button" BasedOn="{StaticResource NavBtn}">
            <Setter Property="Width"  Value="107"/>
            <Setter Property="Height" Value="62"/>
        </Style>

        <Style x:Key="ExitBtn" TargetType="Button" BasedOn="{StaticResource NavBtn}">
            <Setter Property="Background" Value="#111827"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style x:Key="SectionLabel" TargetType="TextBlock">
            <Setter Property="Foreground"          Value="White"/>
            <Setter Property="FontSize"            Value="13"/>
            <Setter Property="FontWeight"          Value="Bold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin"              Value="0,0,0,14"/>
        </Style>

        <Style x:Key="ColumnHeader" TargetType="GridViewColumnHeader">
            <Setter Property="Background"      Value="{StaticResource Primary}"/>
            <Setter Property="Foreground"      Value="#E2E8F0"/>
            <Setter Property="FontSize"        Value="15"/>
            <Setter Property="FontWeight"      Value="Bold"/>
            <Setter Property="Height"          Value="50"/>
            <Setter Property="Padding"         Value="14,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor"          Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GridViewColumnHeader">
                        <Border Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="0">
                            <TextBlock Text="{TemplateBinding Content}"
                                       Foreground="{TemplateBinding Foreground}"
                                       FontSize="{TemplateBinding FontSize}"
                                       FontWeight="{TemplateBinding FontWeight}"
                                       VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1E4D6B"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#0F3248"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ColumnHeaderFirst" TargetType="GridViewColumnHeader" BasedOn="{StaticResource ColumnHeader}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GridViewColumnHeader">
                        <Border Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="10,0,0,0">
                            <TextBlock Text="{TemplateBinding Content}"
                                       Foreground="{TemplateBinding Foreground}"
                                       FontSize="{TemplateBinding FontSize}"
                                       FontWeight="{TemplateBinding FontWeight}"
                                       VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ColumnHeaderLast" TargetType="GridViewColumnHeader" BasedOn="{StaticResource ColumnHeader}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GridViewColumnHeader">
                        <Border Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="0,10,0,0">
                            <TextBlock Text="{TemplateBinding Content}"
                                       Foreground="{TemplateBinding Foreground}"
                                       FontSize="{TemplateBinding FontSize}"
                                       FontWeight="{TemplateBinding FontWeight}"
                                       VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="RowItem" TargetType="ListViewItem">
            <Setter Property="Margin"           Value="0,0,0,8"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Cursor"           Value="Hand"/>
            <Setter Property="Height"           Value="76"/>
            <Setter Property="Foreground"       Value="{StaticResource TextDark}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListViewItem">
                        <Border x:Name="RowBorder"
                                Background="{StaticResource Surface}"
                                BorderBrush="{StaticResource Border}"
                                BorderThickness="1.5"
                                CornerRadius="10"
                                Margin="10,0"
                                Padding="0">
                            <GridViewRowPresenter VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="RowBorder" Property="Background"  Value="#1E3A5F"/>
                                <Setter TargetName="RowBorder" Property="BorderBrush" Value="{StaticResource Primary}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="RowBorder" Property="BorderBrush" Value="{StaticResource PrimaryFade}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <DataTemplate x:Key="NameCellTemplate">
            <TextBlock Text="{Binding Name}"
                       FontSize="22" FontWeight="Bold" Margin="14,0"
                       Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ListViewItem}}"
                       VerticalAlignment="Center"/>
        </DataTemplate>

        <DataTemplate x:Key="UserCodeCellTemplate">
            <TextBlock Text="{Binding UserCode}"
                       FontSize="18" Margin="14,0"
                       Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ListViewItem}}"
                       VerticalAlignment="Center"/>
        </DataTemplate>

        <DataTemplate x:Key="DeptCellTemplate">
            <TextBlock Text="{Binding Department}"
                       FontSize="18" Margin="14,0"
                       Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ListViewItem}}"
                       VerticalAlignment="Center"/>
        </DataTemplate>

        <DataTemplate x:Key="RoleCellTemplate">
            <Border x:Name="RoleBadge"
                    Background="#EFF6FF" BorderBrush="#BFDBFE"
                    BorderThickness="1" CornerRadius="6"
                    Padding="12,5" Margin="14,0"
                    HorizontalAlignment="Left" VerticalAlignment="Center">
                <TextBlock x:Name="TxtRole"
                           Text="{Binding Role}"
                           FontSize="15" FontWeight="SemiBold"
                           Foreground="#1D4ED8"/>
            </Border>
            <DataTemplate.Triggers>
                <DataTrigger Binding="{Binding Role}" Value="ADMIN">
                    <Setter TargetName="RoleBadge" Property="Background"  Value="#FEE2E2"/>
                    <Setter TargetName="RoleBadge" Property="BorderBrush" Value="#FCA5A5"/>
                    <Setter TargetName="TxtRole"   Property="Foreground"  Value="#B91C1C"/>
                </DataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="256"/>
        </Grid.ColumnDefinitions>

        <!-- 메인 콘텐츠 영역 -->
        <Border Grid.Column="0" Background="#F3F5F7">
            <Grid Margin="32,24,24,24">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- 헤더 : 제목 + 검색창 -->
                <Grid Grid.Row="0" Margin="0,0,0,18">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="440"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Operator" FontSize="54" FontWeight="Bold"
                               Foreground="{StaticResource Primary}" VerticalAlignment="Center"/>

                    <Border Grid.Column="1" Background="{StaticResource Surface}"
                            BorderBrush="{StaticResource Border}" BorderThickness="1.5"
                            CornerRadius="10" Height="52" VerticalAlignment="Center">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="52"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border Background="#F1F5F9" CornerRadius="9,0,0,9">
                                <TextBlock Text="🔍" FontSize="16"
                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <Grid Grid.Column="1">
                                <TextBlock x:Name="PlaceholderText" Text="Search users..."
                                           FontSize="17" Foreground="{StaticResource TextMuted}"
                                           VerticalAlignment="Center" Margin="14,0,0,0"
                                           IsHitTestVisible="False">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Text, ElementName=txtSearch}" Value="">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                                <TextBox x:Name="txtSearch"
                                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                         FontSize="17" BorderThickness="0" Background="Transparent"
                                         Padding="14,0,0,0" VerticalContentAlignment="Center"
                                         Foreground="{StaticResource TextDark}"
                                         CaretBrush="{StaticResource Primary}"/>
                            </Grid>
                        </Grid>
                    </Border>
                </Grid>

                <!-- ListView -->
                <ListView Grid.Row="1"
                          x:Name="UserListView"
                          ItemsSource="{Binding Users}"
                          SelectedItem="{Binding SelectedUser}"
                          ItemContainerStyle="{StaticResource RowItem}"
                          BorderThickness="0"
                          HorizontalContentAlignment="Stretch">
                    <ListView.Template>
                        <ControlTemplate TargetType="ListView">
                            <Border Background="{StaticResource CardOuter}"
                                    CornerRadius="10" ClipToBounds="True">
                                <DockPanel>
                                    <GridViewHeaderRowPresenter
                                        DockPanel.Dock="Top"
                                        Columns="{Binding View.Columns, RelativeSource={RelativeSource TemplatedParent}}"
                                        ColumnHeaderContainerStyle="{Binding View.ColumnHeaderContainerStyle, RelativeSource={RelativeSource TemplatedParent}}"/>
                                    <ScrollViewer ScrollViewer.VerticalScrollBarVisibility="Auto"
                                                  ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                                        <ItemsPresenter Margin="0,8,0,10"/>
                                    </ScrollViewer>
                                </DockPanel>
                            </Border>
                        </ControlTemplate>
                    </ListView.Template>

                    <ListView.View>
                        <GridView AllowsColumnReorder="False">
                            <GridViewColumn Header="USER NAME" Width="560"
                                            HeaderContainerStyle="{StaticResource ColumnHeaderFirst}"
                                            CellTemplate="{StaticResource NameCellTemplate}"/>
                            <GridViewColumn Header="LOGIN ID"  Width="320"
                                            HeaderContainerStyle="{StaticResource ColumnHeader}"
                                            CellTemplate="{StaticResource UserCodeCellTemplate}"/>
                            <GridViewColumn Header="ROLE CODE" Width="240"
                                            HeaderContainerStyle="{StaticResource ColumnHeader}"
                                            CellTemplate="{StaticResource DeptCellTemplate}"/>
                            <GridViewColumn Header="ROLE"      Width="468"
                                            HeaderContainerStyle="{StaticResource ColumnHeaderLast}"
                                            CellTemplate="{StaticResource RoleCellTemplate}"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </Grid>
        </Border>

        <!-- 오른쪽 사이드 패널 -->
        <Border Grid.Column="1" Background="{StaticResource Panel}">
            <DockPanel Margin="14,28,14,14">

                <!-- 하단 고정 : Home + EXIT -->
                <StackPanel DockPanel.Dock="Bottom">
                    <Border Height="1" Background="#244A66" Margin="0,0,0,16"/>
                    <Button Style="{StaticResource NavBtn}" Content="HOME"
                            Margin="0,0,0,10" Click="Home_Click"/>
                    <Button Style="{StaticResource ExitBtn}" Content="EXIT"
                            Click="Exit_Click"/>
                </StackPanel>

                <!-- 스크롤 영역 -->
                <ScrollViewer VerticalScrollBarVisibility="Hidden"
                              HorizontalScrollBarVisibility="Disabled">
                    <StackPanel>

                        <!-- 로고 -->
                        <StackPanel HorizontalAlignment="Center" Margin="0,0,0,36">
                            <TextBlock Text="LSS" FontSize="28" FontWeight="Bold"
                                       Foreground="White" HorizontalAlignment="Center"/>
                            <Border Height="2" Width="44" Background="#2A6496"
                                    Margin="0,8,0,0" HorizontalAlignment="Center"/>
                        </StackPanel>

                        <!-- USER MANAGEMENT -->
                        <TextBlock Text="USER MANAGEMENT" Style="{StaticResource SectionLabel}"/>
                        <Button Style="{StaticResource NavBtn}" Command="{Binding AddUserCommand}"
                                Content="Add User"    Margin="0,0,0,12"/>
                        <Button Style="{StaticResource NavBtn}" Command="{Binding EditUserCommand}"
                                Content="Edit User"   Margin="0,0,0,12"/>
                        <Button Style="{StaticResource NavBtn}" Command="{Binding DeleteUserCommand}"
                                Content="Delete User" Margin="0,0,0,0"/>

                        <Border Height="1" Background="#1E3F58" Margin="0,28,0,28"/>

                        <!-- ADMIN PRIVILEGES -->
                        <TextBlock Text="ADMIN PRIVILEGES" Style="{StaticResource SectionLabel}"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,12">
                            <Button Style="{StaticResource HalfBtn}" Command="{Binding DelegateCommand}"
                                    Content="Delegate" Margin="0,0,7,0"/>
                            <Button Style="{StaticResource HalfBtn}" Command="{Binding DismissCommand}"
                                    Content="Dismiss"/>
                        </StackPanel>

                        <Border Height="1" Background="#1E3F58" Margin="0,28,0,28"/>

                        <!-- SYSTEM SETTINGS -->
                        <TextBlock Text="SYSTEM SETTINGS" Style="{StaticResource SectionLabel}"/>
                        <Button Style="{StaticResource NavBtn}" Command="{Binding SettingCommand}"
                                Content="SETTINGS" Margin="0,0,0,0"/>

                    </StackPanel>
                </ScrollViewer>
            </DockPanel>
        </Border>
    </Grid>
</UserControl>
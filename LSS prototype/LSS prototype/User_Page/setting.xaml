<Window x:Class="LSS_prototype.User_Page.setting"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="SETTING" Height="816" Width="1032"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="None"
        FontFamily="Arial" Background="#F3F5F7">

    <Window.Resources>
        <SolidColorBrush x:Key="Primary"   Color="#173753"/>
        <SolidColorBrush x:Key="Surface"   Color="#FFFFFF"/>
        <SolidColorBrush x:Key="CardOuter" Color="#E9ECF0"/>
        <SolidColorBrush x:Key="Border"    Color="#D6DEE8"/>
        <SolidColorBrush x:Key="TextDark"  Color="#1E293B"/>
        <SolidColorBrush x:Key="TextMid"   Color="#475569"/>
        <SolidColorBrush x:Key="TextMuted" Color="#94A3B8"/>
        <SolidColorBrush x:Key="Panel"     Color="#0F2637"/>

        <!-- 텍스트박스 (Height 36→44, FontSize 14→17) -->
        <Style x:Key="InputBox" TargetType="TextBox">
            <Setter Property="Background"               Value="{StaticResource Surface}"/>
            <Setter Property="Foreground"               Value="{StaticResource TextDark}"/>
            <Setter Property="BorderBrush"              Value="{StaticResource Border}"/>
            <Setter Property="BorderThickness"          Value="1.5"/>
            <Setter Property="FontSize"                 Value="17"/>
            <Setter Property="Height"                   Value="44"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10" Padding="12,0">
                            <ScrollViewer x:Name="PART_ContentHost" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- MyAET 멀티라인 (Height 64→77) -->
        <Style x:Key="MultiInputBox" TargetType="TextBox" BasedOn="{StaticResource InputBox}">
            <Setter Property="Height"        Value="77"/>
            <Setter Property="AcceptsReturn" Value="True"/>
            <Setter Property="TextWrapping"  Value="Wrap"/>
            <Setter Property="VerticalContentAlignment" Value="Top"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10" Padding="12,10">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 필드 라벨 (FontSize 12→14) -->
        <Style x:Key="FieldLabel" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextMid}"/>
            <Setter Property="FontSize"   Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin"     Value="2,0,0,5"/>
        </Style>

        <!-- Primary 버튼 (Height 38→46, FontSize 13→16) -->
        <Style x:Key="PrimaryBtn" TargetType="Button">
            <Setter Property="Background"      Value="{StaticResource Primary}"/>
            <Setter Property="Foreground"      Value="White"/>
            <Setter Property="FontSize"        Value="16"/>
            <Setter Property="FontWeight"      Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height"          Value="46"/>
            <Setter Property="Cursor"          Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="11">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryBtn" TargetType="Button" BasedOn="{StaticResource PrimaryBtn}">
            <Setter Property="Background" Value="#CBD5E1"/>
            <Setter Property="Foreground" Value="{StaticResource TextMid}"/>
        </Style>

        <Style x:Key="CancelBtn" TargetType="Button" BasedOn="{StaticResource PrimaryBtn}">
            <Setter Property="Background" Value="#334155"/>
        </Style>

        <!-- EXIT 버튼 (Width 100→120, Height 40→48) -->
        <Style x:Key="ExitBtn" TargetType="Button" BasedOn="{StaticResource PrimaryBtn}">
            <Setter Property="Background" Value="#111827"/>
            <Setter Property="Width"      Value="120"/>
            <Setter Property="Height"     Value="48"/>
            <Setter Property="FontSize"   Value="18"/>
        </Style>
    </Window.Resources>

    <!-- Margin 32,24→38,29 -->
    <Grid Margin="38,29,38,29">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- ① Setting 소제목 -->
            <RowDefinition Height="7"/>
            <RowDefinition Height="Auto"/>
            <!-- ② Hospital Name -->
            <RowDefinition Height="17"/>
            <RowDefinition Height="1"/>
            <!-- ③ 가로 구분선 -->
            <RowDefinition Height="17"/>
            <RowDefinition Height="*"/>
            <!-- ④ C-STORE / MWL -->
            <RowDefinition Height="14"/>
            <RowDefinition Height="Auto"/>
            <!-- ⑤ EXIT -->
        </Grid.RowDefinitions>

        <!-- ① Setting 소제목 (FontSize 46→55) -->
        <TextBlock Grid.Row="0"
                   Text="Setting"
                   FontSize="55" FontWeight="Bold"
                   Foreground="{StaticResource Primary}"/>

        <!-- ② Hospital Name (FontSize 14→17, TextBox Width 200→240) -->
        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <TextBlock Text="Hospital Name"
                       FontSize="17" FontWeight="SemiBold"
                       Foreground="{StaticResource TextMid}"
                       VerticalAlignment="Center" Margin="0,0,14,0"/>
            <TextBox Style="{StaticResource InputBox}"
                     Width="240"
                     Text="{Binding HospitalName, UpdateSourceTrigger=PropertyChanged}"/>
            <Button Content="Save"
                    Style="{StaticResource PrimaryBtn}"
                    Width="86" Margin="12,0,0,0"
                    Command="{Binding SaveHospitalCommand}"/>
        </StackPanel>

        <!-- ③ 가로 구분선 -->
        <Border Grid.Row="4" Background="{StaticResource Border}"/>

        <!-- ④ C-STORE / MWL -->
        <Grid Grid.Row="6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="1"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- C-STORE -->
            <Grid Grid.Column="0" Margin="0,0,24,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- FontSize 22→26 -->
                <TextBlock Grid.Row="0" Text="C-STORE"
                           FontSize="26" FontWeight="Bold"
                           Foreground="{StaticResource Primary}"
                           Margin="0,0,0,12"/>

                <!-- Padding 18,14→22,17, CornerRadius 12→14 -->
                <Border Grid.Row="1"
                        Background="{StaticResource CardOuter}"
                        BorderBrush="{StaticResource Border}"
                        BorderThickness="1.5" CornerRadius="14"
                        Padding="22,17">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="19"/>
                            <!-- 간격 16→19 -->
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="10"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0"  Text="AET"   Style="{StaticResource FieldLabel}"/>
                        <TextBox   Grid.Row="1"  Style="{StaticResource InputBox}"
                                   Text="{Binding CStoreAET, UpdateSourceTrigger=PropertyChanged}"
                                   Margin="0,0,0,12"/>

                        <TextBlock Grid.Row="2"  Text="IP"    Style="{StaticResource FieldLabel}"/>
                        <TextBox   Grid.Row="3"  Style="{StaticResource InputBox}"
                                   Text="{Binding CStoreIP, UpdateSourceTrigger=PropertyChanged}"
                                   Margin="0,0,0,12"/>

                        <TextBlock Grid.Row="4"  Text="Port"  Style="{StaticResource FieldLabel}"/>
                        <TextBox   Grid.Row="5"  Style="{StaticResource InputBox}"
                                   Text="{Binding CStorePort, UpdateSourceTrigger=PropertyChanged}"
                                   Margin="0,0,0,12"/>

                        <TextBlock Grid.Row="6"  Text="MyAET" Style="{StaticResource FieldLabel}"/>
                        <TextBox   Grid.Row="7"  Style="{StaticResource MultiInputBox}"
                                   Text="{Binding CStoreMyAET, UpdateSourceTrigger=PropertyChanged}"/>

                        <!-- Row 8 : 간격 -->

                        <Grid Grid.Row="9">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Button Grid.Column="0" Content="Test Connection"
                                    Style="{StaticResource PrimaryBtn}"
                                    Command="{Binding CStoreTestCommand}"/>
                            <Button Grid.Column="2" Content="Apply"
                                    Style="{StaticResource SecondaryBtn}"
                                    Command="{Binding CStoreApplyCommand}"/>
                        </Grid>

                        <Button Grid.Row="11" Content="Cancel"
                                Style="{StaticResource CancelBtn}"
                                Command="{Binding CStoreCancelCommand}"/>
                    </Grid>
                </Border>
            </Grid>

            <!-- 세로 구분선 -->
            <Border Grid.Column="1" Background="{StaticResource Border}"/>

            <!-- MWL -->
            <Grid Grid.Column="2" Margin="24,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="MWL"
                           FontSize="26" FontWeight="Bold"
                           Foreground="{StaticResource Primary}"
                           Margin="0,0,0,12"/>

                <Border Grid.Row="1"
                        Background="{StaticResource CardOuter}"
                        BorderBrush="{StaticResource Border}"
                        BorderThickness="1.5" CornerRadius="14"
                        Padding="22,17">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="19"/>
                            <!-- 간격 -->
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="10"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0"  Text="AET"   Style="{StaticResource FieldLabel}"/>
                        <TextBox   Grid.Row="1"  Style="{StaticResource InputBox}"
                                   Text="{Binding MwlAET, UpdateSourceTrigger=PropertyChanged}"
                                   Margin="0,0,0,12"/>

                        <TextBlock Grid.Row="2"  Text="IP"    Style="{StaticResource FieldLabel}"/>
                        <TextBox   Grid.Row="3"  Style="{StaticResource InputBox}"
                                   Text="{Binding MwlIP, UpdateSourceTrigger=PropertyChanged}"
                                   Margin="0,0,0,12"/>

                        <TextBlock Grid.Row="4"  Text="Port"  Style="{StaticResource FieldLabel}"/>
                        <TextBox   Grid.Row="5"  Style="{StaticResource InputBox}"
                                   Text="{Binding MwlPort, UpdateSourceTrigger=PropertyChanged}"
                                   Margin="0,0,0,12"/>

                        <TextBlock Grid.Row="6"  Text="MyAET" Style="{StaticResource FieldLabel}"/>
                        <TextBox   Grid.Row="7"  Style="{StaticResource MultiInputBox}"
                                   Text="{Binding MwlMyAET, UpdateSourceTrigger=PropertyChanged}"/>

                        <!-- Row 8 : 간격 -->

                        <Grid Grid.Row="9">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Button Grid.Column="0" Content="Test Connection"
                                    Style="{StaticResource PrimaryBtn}"
                                    Command="{Binding MwlTestCommand}"/>
                            <Button Grid.Column="2" Content="Apply"
                                    Style="{StaticResource SecondaryBtn}"
                                    Command="{Binding MwlApplyCommand}"/>
                        </Grid>

                        <Button Grid.Row="11" Content="Cancel"
                                Style="{StaticResource CancelBtn}"
                                Command="{Binding MwlCancelCommand}"/>
                    </Grid>
                </Border>
            </Grid>
        </Grid>

        <!-- ⑤ EXIT 버튼 (우측 하단) -->
        <Button Grid.Row="8"
                Content="EXIT"
                Style="{StaticResource ExitBtn}"
                HorizontalAlignment="Right"
                Click="Exit_Click"/>
    </Grid>
</Window>

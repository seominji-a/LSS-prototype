<Window x:Class="LSS_prototype.VideoComment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LSS_prototype"
        mc:Ignorable="d"
        Title="VideoComment" Height="1080" Width="1920"
        WindowState="Maximized"
        ResizeMode="NoResize"
        Topmost="True">
    <Grid>
        <Border BorderBrush="Black"
            BorderThickness="2"
            Width="1400"
            Height="1050"
            Margin="10,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"  Grid.RowSpan="3"
             />
        <Image Name="CameraPreviewImage" HorizontalAlignment="Left" VerticalAlignment="Top" Width="1400" Height="1050" Margin="10,0,0,0" Grid.RowSpan="3"/>
        <ComboBox HorizontalAlignment="Left" Margin="1429,135,0,0" VerticalAlignment="Top" Width="476" Height="54"/>
        <ComboBox HorizontalAlignment="Left" Margin="1429,302,0,0" VerticalAlignment="Top" Width="476" Height="54"/>
        <Label Content="Position" HorizontalAlignment="Left" Margin="1432,75,0,0" VerticalAlignment="Top" FontSize="36"/>
        <Label Content="Anatomical Directional" HorizontalAlignment="Left" Margin="1429,240,0,0" VerticalAlignment="Top" FontSize="36"/>
        <Button Content="EXIT" HorizontalAlignment="Left" Margin="1410,1013,0,0" VerticalAlignment="Top" Height="51" Width="510" BorderBrush="#FFDDDDDD" FontSize="25" Background="#FF171616" Foreground="#FFECE5E5">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="10                             "/>
                </Style>
            </Button.Resources>
        </Button>
        <Button Content="RESET" HorizontalAlignment="Left" Margin="1427,928,0,0" VerticalAlignment="Top" Height="67" Width="476" BorderBrush="#FFDDDDDD" FontSize="25" Background="#FF171616" Foreground="#FFECE5E5">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="10                             "/>
                </Style>
            </Button.Resources>
        </Button>
        <Button Content="DELETE" HorizontalAlignment="Left" Margin="1427,839,0,0" VerticalAlignment="Top" Height="72" Width="225" BorderBrush="#FFDDDDDD" FontSize="25" Background="#FF171616" Foreground="#FFECE5E5">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="10                             "/>
                </Style>
            </Button.Resources>
        </Button>
        <Button Content="SAVE" HorizontalAlignment="Left" Margin="1682,839,0,0" VerticalAlignment="Top" Height="72" Width="221" BorderBrush="#FFDDDDDD" FontSize="25" Background="#FF171616" Foreground="#FFECE5E5">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="10                             "/>
                </Style>
            </Button.Resources>
        </Button>
        <Rectangle HorizontalAlignment="Left" Height="273" Margin="1427,494,0,0" VerticalAlignment="Top" Width="476" RadiusX="15.54" RadiusY="15.54" Fill="#FFEDEDED"/>
        <Label Content="Comment" HorizontalAlignment="Left" Margin="1439,435,0,0" VerticalAlignment="Top" FontSize="36"/>
    </Grid>
</Window>
